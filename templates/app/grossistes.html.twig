{% extends 'base.html.twig' %}

{% block title %}Recobike | LISTE DES GROSSISTES{% endblock %}
{% block am_pagetitle %}LISTE DES GROSSISTES{% endblock %}
{% block am_pagebody %}
    <div class="card pd-20 pd-sm-40">
        <div class="table-wrapper">
            <table id="datatable1" class="table display responsive nowrap">
                <thead>
                <tr>
                    <th class="wd-15p">Raison sociale</th>
                    <th class="wd-20p">Adresse postale</th>
                    <th class="wd-5p">CP</th>
                    <th class="wd-15p">Ville</th>
                    <th class="wd-15p">Contact</th>
                    <th class="wd-5p">Téléphone</th>
                    <th class="wd-5p">Mobile</th>
                    <th class="wd-15p">Email</th>
                    <th class="wd-5p">Fiche</th>
                </tr>
                </thead>
                <tbody>
                {% for grossiste in grossistes %}
                    <tr>
                        <td>{{ grossiste.getRaisonSociale }}</td>
                        <td>{{ grossiste.getAdresse }}</td>
                        <td>{{ grossiste.getCodePostal }}</td>
                        <td>{{ grossiste.getVille }}</td>
                        <td>{{ grossiste.getContact }}</td>
                        <td>{{ grossiste.getTelephone }}</td>
                        <td>{{ grossiste.getMobile }}</td>
                        <td align="center">{{ grossiste.getEmail }}</td>
                        <td align="center"><a href="{{ path('editgrossistes_id', {id:grossiste.getId}) }}"><i class="fa fa-camera"></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div><!-- table-wrapper -->
    </div><!-- card -->
{% endblock %}