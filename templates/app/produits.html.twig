{% extends 'base.html.twig' %}
{% block title %}RECOBIKE | LISTE DES COMMANDES{% endblock %}
{% block am_pagetitle %}LISTE DES COMMANDES{% endblock %}
{% block am_pagebody %}
  <div class="card pd-20 pd-sm-40">
    <div class="table-wrapper">
      <table id="datatable1" class="table display responsive nowrap">
        <thead>
          <tr>
            <th class="wd-15p">Num√©ro commande</th>
            <th class="wd-15p">Date</th>
            <th class="wd-15p">Statut</th>
            <th class="wd-20p">Magasin</th>
            <th class="wd-15p">Facture</th>
            <th class="wd-15p">Details</th>
          </tr>
        </thead>
        <tbody>
          {% for commande in commandes %}
            <tr>
              <td>{{ commande.getNumeroCommande }}</td>
              <td>{{ commande.getDate.format('d/m/Y') }}</td>
              <td>{{ commande.getStatut }}</td>
              <td>{{ commande.getIdMagasin.getRaisonSociale }}</td>
              <td>{{ commande.getFacture }}</td>
              <td align="center"><a href="{{ path('commande', {id: commande.getId}) }}"><i class="fa fa-camera"></a></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div><!-- table-wrapper -->
  </div><!-- card -->
{% endblock %}
