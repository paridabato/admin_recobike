{% extends 'base.html.twig' %}
{% block title %}RECOBIKE | LISTE DES PRODUITS{% endblock %}
{% block am_pagetitle %}LISTE DES PRODUITS{% endblock %}
{% block am_pagebody %}
  <div class="card pd-20 pd-sm-40">
    <div class="table-wrapper">
      <table id="datatable1" class="table display responsive nowrap">
        <thead>
          <tr>
            <th class="wd-15p">Id produit</th>
            <th class="wd-15p">Image</th>
            <th class="wd-15p">Reference</th>
            <th class="wd-20p">Libelle</th>
            <th class="wd-15p">Tarif_public</th>
            <th class="wd-15p">Details</th>
          </tr>
        </thead>
        <tbody>
          {% for produit in produits %}
            <tr>
              <td>{{ produit.getId }}</td>
              <td>{{ produit.getImage }}</td>
              <td>{{ produit.getReference }}</td>
              <td>{{ produit.getLibelle }}</td>
              <td>{{ produit.getTarifPublic }}</td>
              <td align="center"><a href="{{ path('produit_id', {id: produit.getId}) }}"><i class="fa fa-camera"></a></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div><!-- table-wrapper -->
  </div><!-- card -->
{% endblock %}
