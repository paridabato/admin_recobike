{% extends 'base.html.twig' %}

{% block title %}Recobike | Reset your password{% endblock %}
{% block am_sideleft %}{% endblock %}
{% block body %}
    <div class="am-signin-wrapper">
        <div class="am-signin-box">
            <div class="row no-gutters">
                <div class="col-lg-12">
                    {% for flashError in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}
                </div>
                <div class="col-lg-12">
                    <p align="center"><img src="{{ asset('/assets/img/logo.png') }}"><br>Gestion & Administration</p><br><br>
                    <h5 class="tx-gray-800 mg-b-25">Réinitialisez votre mot de passe</h5>
                    {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div>
                        <small>
                            Renseignez votre adresse email. Vous recevrez un email avec un lien permettant de réinitialiser votre mot de passe.
                        </small>
                    </div>

                    <button class="btn btn-primary">Envoyer</button>
                    {{ form_end(requestForm) }}
                </div><!-- col-7 -->
            </div><!-- row -->
            <p class="tx-center tx-white-5 tx-12 mg-t-15">Copyright &copy; {{ "now"|date("Y") }}. Tous droits réservés RECOBIKE</p>
        </div><!-- signin-box -->
    </div><!-- am-signin-wrapper -->
{% endblock %}